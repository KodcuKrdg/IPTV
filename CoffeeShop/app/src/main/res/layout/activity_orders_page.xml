<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrdersPage">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/home"
        app:srcCompat="@drawable/back"
        android:layout_gravity="right"/>
    <LinearLayout
        android:id="@+id/deneme1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRAZILIAN"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/productMoney1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 45Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productNumber1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet 50"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productTotalMoney1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplam 500Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAFT"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/productMoney2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 45Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet 50"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productTotalMoney2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplam 500Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NISH COFFE"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/productMoney3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 45Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productNumber3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet 50"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/productTotalMoney3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplam 500Tl"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"/>


        </LinearLayout>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe3" />
    </LinearLayout>

    <TextView
        android:id="@+id/totalOrderMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Toplam Tutar 500000"/>

    <Button
        android:id="@+id/sendOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sipraiş Et" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sil" />
</LinearLayout>