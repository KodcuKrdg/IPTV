<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Index">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/orderPages"
        app:srcCompat="@drawable/basket"
        android:layout_gravity="right"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="187dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRAZILIAN"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 45Tl"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/productNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberSigned1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/add1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/basket" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAFT"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 70Tl"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/productNumber2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberSigned2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:textAlignment="center"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/add2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/basket" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/coffe3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="189dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NISH COFFE"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiyatı 120Tl"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/productNumber3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adet"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberSigned3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:textAlignment="center"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/add3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/basket" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>